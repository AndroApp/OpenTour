<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dialogHow"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/indigo400">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cosa"
            android:textColor="@color/white"
            android:gravity="center_vertical|center_horizontal"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/indigo300"
        >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/iconCircleDialogWalk"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/circle_indigo600" />


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageWhatView"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_what" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Switch
            android:id="@+id/whatAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tutti/Nessuno"
            style="@style/IndigoCheckBox"

            />

        <CheckBox
            android:id="@+id/whatChurch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/whatAll"
            style="@style/IndigoCheckBox"
            android:text="Chiese"/>

        <CheckBox
            android:id="@+id/whatMuseum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/whatChurch"
            style="@style/IndigoCheckBox"
            android:text="Musei "/>

        <CheckBox
            android:id="@+id/whatVilla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/whatMuseum"
            style="@style/IndigoCheckBox"
            android:text="Ville e Giardini"/>

        <CheckBox
            android:id="@+id/whatBuildings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/whatVilla"
            style="@style/IndigoCheckBox"
            android:text="Palazzi e Castelli"/>

        <CheckBox
            android:id="@+id/whatSquare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/whatBuildings"
            style="@style/IndigoCheckBox"
            android:text="Piazze e Strade"/>

        <CheckBox
            android:id="@+id/whatStatue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/whatSquare"
            style="@style/IndigoCheckBox"
            android:text="Statue e Fontane"/>

        <CheckBox
            android:id="@+id/whatArc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/IndigoCheckBox"
            android:text="Archi, Porte e Mura"
            android:layout_marginRight="25dp"
            android:layout_marginEnd="25dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <CheckBox
            android:id="@+id/whatTheater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/IndigoCheckBox"
            android:text="Teatri"
            android:layout_below="@+id/whatArc"
            android:layout_alignLeft="@+id/whatArc"
            android:layout_alignStart="@+id/whatArc"
             />
        <!--android:layout_toRightOf="@+id/whatChurch"-->
        <!--android:layout_toEndOf="@+id/whatChurch"-->

        <!--<CheckBox-->
            <!--style="@style/IndigoCheckBox"-->
            <!--android:id="@+id/whatMonuments"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@+id/whatTheater"-->
            <!--android:layout_alignLeft="@+id/whatArc"-->
            <!--android:layout_alignStart="@+id/whatArc"-->
            <!--android:text="no" />-->

        <CheckBox
            style="@style/IndigoCheckBox"
            android:id="@+id/whatBridges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ponti"
            android:layout_below="@+id/whatTheater"
            android:layout_alignLeft="@+id/whatArc"
            android:layout_alignStart="@+id/whatArc" />

        <CheckBox
            style="@style/IndigoCheckBox"
            android:id="@+id/whatCemetery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cimiteri"
            android:layout_above="@+id/whatSquare"
            android:layout_alignLeft="@+id/whatMarket"
            android:layout_alignStart="@+id/whatMarket" />

        <CheckBox
            style="@style/IndigoCheckBox"
            android:id="@+id/whatMarket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fiere e Mercati"
            android:layout_below="@+id/whatCemetery"
            android:layout_alignLeft="@+id/whatArc"
            android:layout_alignStart="@+id/whatArc" />

        <CheckBox
            style="@style/IndigoCheckBox"
            android:id="@+id/whatOthers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Altri Monumenti e Luoghi di Interesse"
            android:layout_below="@+id/whatStatue"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <CheckBox
            style="@style/IndigoCheckBox"
            android:id="@+id/whatMonuments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monumenti"
            android:layout_above="@+id/whatCemetery"
            android:layout_alignLeft="@+id/whatCemetery"
            android:layout_alignStart="@+id/whatCemetery" />

        <CheckBox
            style="@style/IndigoCheckBox"
            android:id="@+id/whatStructures"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edifici"
            android:layout_above="@+id/whatOthers"
            android:layout_alignLeft="@+id/whatMarket"
            android:layout_alignStart="@+id/whatMarket" />


    </RelativeLayout>


</LinearLayout>